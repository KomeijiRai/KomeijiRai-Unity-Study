#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

int value = 0;

void main() {
    printf("\n******************************************\n\n");
    int i;
    pid_t pid;

    for (i = 0; i < 2; i++) {
        pid = fork();
        if (pid < 0) {
            fprintf(stderr, "Fork Failed");
            exit(-1);
        } else if (pid == 0) {
            value += 15;
            printf("Child value = %d, pid = %d\n", value, pid);
        } else {
            wait(NULL);
            printf("Parent value = %d, pid = %d\n", value, pid);
            exit(0);
        }
    }
}
